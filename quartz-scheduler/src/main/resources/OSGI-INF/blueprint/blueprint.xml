<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <cm:property-placeholder persistent-id="com.github.lburgazzoli.karaf.quartz.scheduler" update-strategy="reload" >
        <cm:default-properties>
            <cm:property
                name  = "scheduler.start.delay"
                value = "5"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id    = "TASK_SCHEDULER_FACTORY"
          class = "org.quartz.impl.StdSchedulerFactory">
        <argument>
            <props>
                <prop key="org.quartz.scheduler.jmx.export"  >true</prop>
                <prop key="org.quartz.scheduler.instanceName">k-scheduler</prop>
                <prop key="org.quartz.threadPool.threadCount">3</prop>
            </props>
        </argument>
    </bean>

    <bean id             = "TASK_SCHEDULER"
          class          = "com.github.lburgazzoli.examples.karaf.quartz.TaskScheduler"
          init-method    = "init"
          destroy-method = "destroy">
        <property name="schedulerStartDelay" value="${scheduler.start.delay}"/>
        <property name="schedulerFactory" ref="TASK_SCHEDULER_FACTORY"/>
        <property name="bundleContext"    ref="blueprintBundleContext"/>
    </bean>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <service ref       = "TASK_SCHEDULER"
             interface = "com.github.lburgazzoli.examples.karaf.quartz.ITaskScheduler">
        <service-properties>
            <entry key   = "osgi.jndi.service.name"
                   value = "task.scheduler"/>
        </service-properties>
    </service>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="scheduler/sample-add">
            <action class="com.github.lburgazzoli.examples.karaf.quartz.cmd.AddSampleTask">
                <property name="service" ref="TASK_SCHEDULER"/>
            </action>
        </command>
        <command name="scheduler/scheduler-info">
            <action class="com.github.lburgazzoli.examples.karaf.quartz.cmd.TaskSchedulerInfoCommand">
                <property name="service" ref="TASK_SCHEDULER"/>
            </action>
        </command>
        <command name="scheduler/task-list">
            <action class="com.github.lburgazzoli.examples.karaf.quartz.cmd.TaskListCommand">
                <property name="service" ref="TASK_SCHEDULER"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
