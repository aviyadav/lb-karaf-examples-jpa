<?xml version="1.0" encoding="UTF-8"?>
<!--
    First install the HSQLDB driver using:
    karaf@root> install -s mvn:org.hsqldb/hsqldb/2.2.9

    Then copy this file to the deploy folder
-->
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <manifest xmlns="http://karaf.apache.org/xmlns/deployer/blueprint/v1.0.0">
        Bundle-Name: Karaf Examples :: JPA :: DataSource
        Bundle-SymbolicName: karaf.examples.datasource
        Bundle-Version: 1.0.0.SNAPSHOT
        DynamicImport-Package: *
    </manifest>

    <bean id="data_source_hsql" class="org.hsqldb.jdbc.JDBCDataSource">
        <property name="url"      value="jdbc:hsqldb:mem:lb.examples.karaf.jpa.commons.data"/>
        <property name="user"     value="sa"/>
        <property name="password" value=""/>
    </bean>

    <service interface="javax.sql.DataSource" ref="data_source_hsql">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/DS"/>
        </service-properties>
    </service>

    <bean id="data_source_h2" class="org.h2.jdbcx.JdbcDataSource">
        <property name="URL" value="jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE"/>
        <property name="user" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <service interface="javax.sql.DataSource" ref="data_source_h2">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/H2"/>
        </service-properties>
    </service>

</blueprint>